---
import Github from "./icons/Github.astro";
import React from "./icons/React.astro";
import Tailwind from "./icons/Tailwind.astro";
import LinkIcon from "./icons/LinkIcon.astro";
import ProjectButton from "./ProjectButton.astro";

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-[#24272e] text-[#75c2d9]",
    icon: React,
  },
  TAILWINDCSS: {
    name: "Tailwind CSS",
    class: "bg-[#0c649b] text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "Proyectos",
    description:
      "PÃ¡gina con proyectos realizados en React. Casi como un playground personal.",
    link: "https://kurtex.github.io/projects/",
    github: "https://github.com/kurtex/projects",
    image: "/projects/proyectos.webp",
    tags: [TAGS.REACT, TAGS.TAILWINDCSS],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image, github, link }) => (
    <article class="flex flex-row gap-x-5 ">
      <img
        src={image}
        alt={title}
        class="rounded shadow-2xl shadow-white/10 w-full h-56 hover:scale-105 transition"
      />
      <div class="w-full">
        <h3 class="text-2xl font-semibold text-yellow-600 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <ul class="flex gap-x-2 flex-row mb-4">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-1 rounded-full text-[11px] ${tag.class} py-0.5 px-1.5`}>
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <p class="text-base mb-5 text-pretty">{description}</p>
        <nav class="flex w-full gap-x-3">
          <ProjectButton link={github}>
            <Github /> Github
          </ProjectButton>
          <ProjectButton link={link}>
            <LinkIcon /> Website
          </ProjectButton>
        </nav>
      </div>
    </article>
  ))
}
